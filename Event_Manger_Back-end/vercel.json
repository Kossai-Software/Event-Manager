{
  "version": 2,
  "builds": [
    {
      "src": "Event_Manager_Front-end/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "includeNodeModules": true
      }
    },
    {
      "src": "Event_Manger_Back-end/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Event_Manger_Back-end/server.js"
    },
    {
      "handle": "filesystem"  // ðŸ‘ˆ THIS IS CRITICAL - ADD THIS LINE
    },
    {
      "src": "/(.*)",
      "dest": "Event_Manager_Front-end/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
